<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="36dp"
        android:clipToPadding="false"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvBaslik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="RANDEVU EKLE"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etAdSoyad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Adı Soyadı"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Telefonu"
            android:inputType="phone" />

        <Spinner
            android:id="@+id/spTur"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:dropDownWidth="match_parent" />

        <Switch
            android:id="@+id/swDurum"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:text="Ödeme Durumu"
            android:textOff="Alınmadı"
            android:textOn="Alındı"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnTarih"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@color/turuncu"
            android:drawableLeft="@android:drawable/ic_menu_month"
            android:drawablePadding="-45dp"
            android:drawableTint="@color/beyaz"
            android:onClick="btnTarih"
            android:paddingLeft="18dp"
            android:text="Randevu Tarihi"
            android:textColor="@color/beyaz" />

        <Button
            android:id="@+id/btnSaat"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="2dp"
            android:background="@color/turuncu"
            android:drawableLeft="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="-45dp"
            android:drawableTint="@color/beyaz"
            android:onClick="btnSaat"
            android:paddingLeft="18dp"
            android:text="Randevu Saati"
            android:textColor="@color/beyaz" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnKaydet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/turuncu"
                android:drawableLeft="@android:drawable/ic_input_add"
                android:drawablePadding="-45dp"
                android:drawableTint="@color/yesil"
                android:onClick="btnKaydet"
                android:paddingLeft="18dp"
                android:text="Kaydet"
                android:textColor="@color/beyaz" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>